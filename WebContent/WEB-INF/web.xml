<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>firstServlet</display-name>
 
 <servlet>
 	<servlet-name>add</servlet-name>
 	<servlet-class>com.firstServlet.MyServlet</servlet-class>
 	
 	<!-- here we are defing the values for servletconfig -->
 	<init-param>
 		<param-name>name</param-name>
 		<param-value>Prathap</param-value>
 	</init-param>
 	
 </servlet>
 <servlet-mapping>
 	<servlet-name>add</servlet-name>
 	<url-pattern>/add</url-pattern>
 </servlet-mapping>
 
 <servlet>
 	<servlet-name>Square</servlet-name>
 	<servlet-class>com.firstServlet.Square</servlet-class>
 </servlet>
 <servlet-mapping>
 	<servlet-name>Square</servlet-name>
 	<url-pattern>/square</url-pattern>
 </servlet-mapping>
 
 <!-- ServletContext -->
 
 <context-param>
 	<param-name>name</param-name>
 	<param-value>Swetha</param-value>
 </context-param>
</web-app>